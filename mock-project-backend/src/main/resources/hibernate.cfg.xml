<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">Mockup_SmartOffice</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.charSet">utf8</property>
        <property name="hibernate.characterEncoding">utf8</property>
        <property name="hibernate.useUnicode">yes</property>

        <mapping class="com.itsol.train.mock.entity.PositionEntity"/>
        <mapping class="com.itsol.train.mock.entity.DepartmentEntity"/>
        <mapping class="com.itsol.train.mock.entity.RoleEntity"/>
        <mapping class="com.itsol.train.mock.entity.EmployeeEntity"/>
        <mapping class="com.itsol.train.mock.entity.TeamEntity"/>

    </session-factory>
</hibernate-configuration>
